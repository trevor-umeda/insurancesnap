<%= form_for @item,:html => { :multipart => true } do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
    <div class = "field">
    <%= f.label :name %> </br>
    <%= f.text_field :name %>
    </div>
    <div class = "field">
    <%= f.label :description %> </br>
    <%= f.text_area :description, :rows => 4 %>
    </div>
     <div class = "field">
     <%= f.label :price %> </br>
    <%= f.text_field :price %>
    </div>

     <div class = "field">
      <%= f.hidden_field :snapshot_id %>
    </div>
   <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>